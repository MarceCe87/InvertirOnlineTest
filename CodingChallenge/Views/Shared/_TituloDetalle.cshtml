@*  Modal Entidad detalle *@
<div class="modal fade" id="tituloDetalle" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Detalle de Títulos</h4>
            </div>
            
            <div class="modal-body">
                <form class="form-inline">
                    <div class="form-group ui-widget">
                        <label>Título:</label>
                        <input type="text" for="tags" class="form-control" id="txtTitulo" />
                        <span class="form-control-clear glyphicon glyphicon-remove form-control-feedback hidden"></span>
                        <button type="button" id="btnBuscarTitulo" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                    </div>                    
                </form>                       

                <div class="wrap-periodos js-detalleTitulo" hidden>
                    <div class="titulo">
                       <span class="max"></span>
                        <p id="descripcion"></p>
                        <p id="detalle"></p>                       
                    </div>
                    <table class="table table-bordered table-condensed">
                        <colgroup>
                            <col span="3" style="width: 150px">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Simbolo</th>
                                <th>Moneda</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td id="tipo"></td>
                                <td class="max" id="simbolo"></td>
                                <td class="max" id="moneda"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>